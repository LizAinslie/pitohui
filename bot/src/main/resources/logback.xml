<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ============================
         PROPERTIES & DEFAULT LEVEL
         ============================ -->
    <!-- Example: -Dlog.level=DEBUG -->
    <property name="LOG_LEVEL" value="${log.level:-INFO}" />

    <!-- Size of async queue -->
    <property name="ASYNC_QUEUE" value="2048" />

    <!-- ================
         PATTERN LAYOUTS
         ================ -->
    <property name="CONSOLE_PATTERN"
              value="%highlight(%-5level) %cyan(%logger{36}) %yellow([%X{tag}]) - %msg%n"/>

    <!-- ============
         APPENDERS
         ============ -->

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Async wrapper -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>${ASYNC_QUEUE}</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="CONSOLE"/>
    </appender>

    <!-- ============
         ROOT LOGGER
         ============ -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </root>

</configuration>
